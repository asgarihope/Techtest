{
    "openapi": "3.0.0",
    "info": {
        "title": "TechTest API Documentation",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "Current Server"
        }
    ],
    "paths": {
        "/api/articles/{id}": {
            "get": {
                "tags": [
                    "Article"
                ],
                "summary": "Fetch a single article by ID",
                "operationId": "6a92b03945eeb365741528256b29cbc6",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of article to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/ArticleResource"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Article not found"
                    }
                }
            }
        },
        "/api/articles": {
            "get": {
                "tags": [
                    "Article"
                ],
                "summary": "Fetch a list of articles",
                "operationId": "88cb4dac961b57f1e63dd31953f31dd4",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Number of page",
                        "schema": {
                            "type": "integer"
                        },
                        "example": 1
                    },
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "Number of articles per page",
                        "schema": {
                            "type": "integer"
                        },
                        "example": 10
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/ArticleResource"
                                            }
                                        },
                                        "current_page": {
                                            "type": "integer"
                                        },
                                        "last_page": {
                                            "type": "integer"
                                        },
                                        "total": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No articles found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ArticleResource": {
                "description": "",
                "properties": {
                    "id": {
                        "description": "Id of article",
                        "type": "integer"
                    },
                    "title": {
                        "description": "Title of article",
                        "type": "string"
                    },
                    "content": {
                        "description": "Content of article",
                        "type": "string"
                    },
                    "short_content": {
                        "description": "Short Content of article",
                        "type": "string"
                    },
                    "published_at": {
                        "description": "Published At of article",
                        "type": "string",
                        "format": "date"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Article",
            "description": "Article"
        }
    ]
}